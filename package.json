{
  "name": "hapi-graphql-typescript",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Ashok Patidar",
  "email": "ashok@linkites.com",
  "license": "MIT",
  "engines": {
    "node": ">=10.0"
  },
  "scripts": {
    "build": "tsc",
    "start": "tsc && node build/src/index.js",
    "tsc-watch": "tsc -w",
    "start:dev": "nodemon",
    "watch": "nodemon --watch build/src build/src/index.js",
    "clean": "rm -rf build && mkdir build",
    "fix": "tslint --project ./tsconfig.json",
    "test": "jest"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "yarn start",
    "ext": "ts"
  },
  "dependencies": {
    "@hapi/good": "^8.2.4",
    "@hapi/good-console": "^8.1.2",
    "@hapi/good-squeeze": "^5.2.1",
    "@hapi/hapi": "18.4.0",
    "apollo-server-hapi": "2.14.2",
    "bcryptjs": "2.4.3",
    "bluebird": "^3.7.1",
    "confidence": "^4.0.2",
    "dotenv": "8.2.0",
    "graphql-iso-date": "3.6.1",
    "hapi": "18.1.0",
    "hapi-auth-jwt2": "^8.8.0",
    "hapi-cron": "^1.1.0",
    "hapi-rate-limit": "^4.1.0",
    "hapi-swagger": "11.0.1",
    "inert": "^5.1.3",
    "jest": "^24.9.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "module-alias": "^2.2.2",
    "mongoose": "5.7.12",
    "ts-jest": "^24.1.0",
    "vision": "5.4.4",
    "winston": "3.2.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "2.4.2",
    "@types/bluebird": "^3.5.29",
    "@types/confidence": "^1.4.30",
    "@types/graphql-iso-date": "3.3.3",
    "@types/hapi": "18.0.3",
    "@types/jest": "^24.0.23",
    "@types/jsonwebtoken": "8.3.5",
    "@types/lodash": "^4.14.149",
    "@types/mongoose": "5.5.32",
    "@types/node-fetch": "2.5.3",
    "node": "13.1.0",
    "nodemon": "1.19.4",
    "ts-node": "^8.5.2",
    "tslint": "^5.20.1",
    "typescript": "^3.7.2"
  },
  "_moduleAliases": {
    "@root": "build/src",
    "@models": "build/src/models",
    "@utils": "build/src/utils",
    "@config": "build/src/config",
    "@graphql": "build/src/graphql"
  },
  "keywords": [
    "api",
    "nodejs",
    "hapi",
    "typescript",
    "swagger"
  ]
}
